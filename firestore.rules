rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'silasputerbaugh1@gmail.com';
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone can read user profiles
      allow read: if true;
      // Users can create and update their own profile
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      // Only admins can delete users
      allow delete: if isAdmin();
    }
    
    // Songs collection
    match /songs/{songId} {
      // Anyone can read songs
      allow read: if true;
      // Authenticated users can create songs
      allow create: if isAuthenticated();
      // Users can update their own songs, admins can update any song
      allow update: if isAuthenticated();
      // Users can delete their own songs, admins can delete any song
      allow delete: if isAuthenticated();
    }
    
    // Playlists collection
    match /playlists/{playlistId} {
      // Anyone can read playlists
      allow read: if true;
      // Authenticated users can create playlists
      allow create: if isAuthenticated();
      // Users can update their own playlists (check userId field)
      allow update: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
      // Users can delete their own playlists
      allow delete: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
    }
    
    // Liked songs collection
    match /likedSongs/{likeId} {
      // Users can read their own liked songs
      allow read: if isAuthenticated();
      // Users can create their own likes
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
      // Users can delete their own likes
      allow delete: if isAuthenticated();
    }
    
    // Recently played collection
    match /recentlyPlayed/{playId} {
      // Users can read their own recently played
      allow read: if isAuthenticated();
      // Users can create their own play records
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
      // No one can update or delete (these are historical records)
      allow update, delete: if false;
    }
    
    // Listening sessions collection (for active session tracking)
    match /listeningSessions/{userId} {
      // Admins can read all sessions, users can read their own
      allow read: if isAdmin() || isOwner(userId);
      // Users can create/update their own session, admins can update any session
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      // Users can delete their own session
      allow delete: if isOwner(userId);
    }
    
    // Artist requests collection
    match /artistRequests/{requestId} {
      // Only admins can read artist requests
      allow read: if isAdmin();
      // Authenticated users can create requests
      allow create: if isAuthenticated();
      // Only admins can update or delete requests
      allow update, delete: if isAdmin();
    }
  }
}

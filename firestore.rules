rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Songs collection - Community upload model
    match /songs/{songId} {
      // Anyone can read songs
      allow read: if true;
      
      // Any authenticated user can create songs (upload)
      allow create: if request.auth != null &&
                      request.resource.data.uploadedBy == request.auth.uid;
      
      // Users can update their own songs, admins can update any song
      allow update: if request.auth != null && 
                      (resource.data.uploadedBy == request.auth.uid || isAdmin());
      
      // Users can delete their own songs, admins can delete any song
      allow delete: if request.auth != null && 
                      (resource.data.uploadedBy == request.auth.uid || isAdmin());
    }
    
    // Artist Requests collection
    match /artistRequests/{requestId} {
      allow read: if isAdmin();
      allow create: if request.auth != null;
      allow update, delete: if isAdmin();
    }
    
    // Playlists collection (if used in future)
    match /playlists/{playlistId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
                      request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && 
                              resource.data.userId == request.auth.uid;
    }
  }
}
